
@{
    ViewBag.Title = "Documentos";
}
<div class="row margin-top" ng-controller="DocumentoCtrl">
    <div class="col-md-12">
        <div class="panel-group" id="accordion">
            <div class="panel">
                <form novalidate class="form-horizontal" name="form">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed">
                                <span class="glyphicon glyphicon-plus-sign"></span> Formulario de registro
                            </a>
                            <button data-toggle="collapse" data-parent="#accordion" data-target="#screen2" class="btn btn-default pull-right" ng-disabled="form.$invalid" ng-click="save(documento)">
                                <span class="glyphicon glyphicon-floppy-disk"></span>
                                Grabar
                            </button>
                            <button class="btn btn-default pull-right" ng-click="new()">
                                <span class="glyphicon glyphicon-new-window"></span>
                                nuevo
                            </button>
                        </h4>
                    </div>

                    <div id="screen1" class="panel-collapse collapse fade" aria-expanded="false">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Nombre</label>
                                        <div class="col-sm-10 col-md-9">
                                            <input type="text" class="form-control" ng-model="documento.nombre" placeholder="Nombre" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Ruta</label>
                                        <div class="col-sm-10 col-md-9">
                                            <input type="file" class="form-control" ng-model="documento.ruta" id="txt_archivo"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" data-target="#screen2" class="collapsed" aria-expanded="false">
                            <span class="glyphicon glyphicon-plus-sign"></span> Listado de documentos
                        </a>
                    </h4>
                </div>
                <div id="screen2" class="panel-collapse collapse in fade" aria-expanded="false">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nombre</th>
                                        <th>Archivo<i class="fa fa-sort"></i></th>
                                        <th>Visto Por</th>
                                        <th>FechaRegistro <i class="fa fa-sort"></i></th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="e in listDocumento">
                                        <td>{{e.id_documento}}</td>
                                        <td>{{e.nombre}}</td>
                                        <td><a target="_blank" href="~/Utils/pdfs/{{e.ruta}}">{{e.ruta}}</a></td>
                                        <td><a href="#" ng-click="viewUser(e)">Ver</a></td>
                                        <td>{{e.fecha_registro  | totime}}</td>
                                        <td class="text-center">
                                            <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed" ng-click="edit(e)" title="Editar a {{e.nombre}}">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("../partial/UsuarioDocumento")
</div>
@section Scripts{
    <script src="~/Scripts/appjs/documento-controller.js"></script>
}
