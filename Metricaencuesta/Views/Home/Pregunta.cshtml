
@{
    ViewBag.Title = "Pregunta";
}
<div class="row margin-top" ng-controller="PreguntaCtrl">
    <div class="col-md-12">
        <div class="panel-group" id="accordion">
            <div class="panel">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed">
                            <span class="glyphicon glyphicon-plus-sign"></span> Formulario de registro
                        </a>
                        <button data-toggle="collapse" data-parent="#accordion" data-target="#screen2" aria-expanded="false" class="btn btn-default pull-right collapsed" ng-click="save(pregunta)" ng-disabled="form.$invalid">
                            <span class="glyphicon glyphicon-floppy-disk"></span>
                            Grabar
                        </button>
                        <button class="btn btn-default pull-right" ng-click="pregunta = {}">
                            <span class="glyphicon glyphicon-new-window"></span>
                            Nuevo
                        </button>
                    </h4>
                </div>

                <div id="screen1" class="panel-collapse collapse fade" aria-expanded="false">
                    <div class="panel-body">
                        <form class="form-horizontal" name="form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Grupo</label>
                                        <div class="col-sm-10 col-md-9">
                                            <select class="form-control" ng-model="pregunta.id_gpregunta" ng-options="g.id_gpregunta as g.descripcion for g in listGpregunta" ng-change="filterGpregunta(pregunta.id_gpregunta)" required>
                                                <option value=""> ---Seleccione ---</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Descripcion</label>
                                        <div class="col-sm-10 col-md-9">
                                            <textarea class="form-control" ng-model="pregunta.descripcion" placeholder="Descripcion" required ></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Estado</label>
                                        <div class="col-sm-10 col-md-9">
                                            <select class="form-control" ng-model="pregunta.estado" ng-options="s.code as s.text for s in states">
                                                <option value=""> --- Seleccione --- </option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" data-target="#screen2" class="collapsed" aria-expanded="false">
                            <span class="glyphicon glyphicon-plus-sign"></span> Listado de preguntas
                        </a>
                    </h4>
                </div>
                <div id="screen2" class="panel-collapse collapse in fade" aria-expanded="false">
                    <div class="panel-body">
                        <input type="text" class="form-control" ng-model="search" placeholder="Buscar..." />
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Grupo Pregunta</th>
                                        <th>Descripción</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="p in listPregunta | filter:search">
                                        <td>{{p.gpregunta.descripcion}}</td>
                                        <td>{{p.descripcion}}</td>
                                        <td ng-if="p.estado == 'A'">Activo</td>
                                        <td ng-if="p.estado != 'A'">Inactivo</td>
                                        <td class="text-center">
                                            <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed" ng-click="edit(p)" title="Editar a {{p.descripcion}}">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/appjs/pregunta-controller.js"></script>
}

