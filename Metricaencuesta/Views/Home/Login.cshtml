
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="app" lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MétrIca Andina</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/login-cliente.min.css" />
    <meta name="description" content="The description of my page" />
</head>
<body>
    <section class="container-fluid">
        <article class="row" ng-controller="EvaluadorCtrl">
            <div class="col-sm-2 col-md-3"></div>
            <div class="col-xs-12 col-sm-8 col-md-6 box_login">
                <figure>
                    <img src="~/Utils/img/Logo.jpg" class="img-responsive"/>
                </figure>
                <form novalidate class="form-horizontal" name="form">
                    <div class="form-group">
                        <label>Usuario</label>
                        <input type="text" ng-model="usuario" class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" ng-model="password" class="form-control" required/>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-default pull-right" ng-click="in()" ng-disabled="form.$invalid">Ingresar</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-2 col-md-3"></div>
        </article>
    </section>
    <div id="alert" class="modal fade" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <img src="~/Utils/img/loading.gif" alt="" height="60" style="margin:auto;display:table-cell;" />
        </div>
    </div>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-locale_es-pe.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/appjs/app-factory.js"></script>
    <script src="~/Scripts/appjs/app-service.js"></script>
    <script src="~/Scripts/appjs/evaluador-controller.js"></script>
</body>
</html>
