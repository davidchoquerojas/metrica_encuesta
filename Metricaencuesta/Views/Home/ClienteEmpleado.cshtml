
@{
    ViewBag.Title = "ClienteEmpleado";
}
<div class="row margin-top" ng-controller="ClienteEmpleadoCtrl">
    <div class="col-md-12">
        <div class="panel-group" id="accordion">
            <div class="panel">
                <form novalidate class="form-horizontal" name="form">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed">
                                <span class="glyphicon glyphicon-plus-sign"></span> Formulario de registro
                            </a>
                            <button data-toggle="collapse" data-parent="#accordion" data-target="#screen2" class="btn btn-default pull-right" ng-disabled="form.$invalid" ng-click="save(cliemp)">
                                <span class="glyphicon glyphicon-floppy-disk"></span>
                                Grabar
                            </button>
                            <button data-toggle="collapse" data-parent="#accordion" data-target="#screen1" class="btn btn-default pull-right" ng-click="new()">
                                <span class="glyphicon glyphicon-new-window"></span>
                                nuevo
                            </button>
                        </h4>
                    </div>

                    <div id="screen1" class="panel-collapse collapse fade" aria-expanded="false">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Empresa*</label>
                                        <div class="col-sm-10 col-md-9">
                                            <select ng-model="cliemp.id_cliente" class="form-control" required ng-options="c.id_cliente as c.razon_social for c in listCliente">
                                                <option value=""> --- Seleccione --</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Empleado*</label>
                                        <div class="col-sm-10 col-md-9">
                                            <select ng-model="cliemp.id_empleado" class="form-control" required ng-options="e.id_empleado as e.nombres+' '+e.apellidos for e in listEmpleado">
                                                <option value=""> --- Selleccione --</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Evaluador</label>
                                        <div class="col-sm-10 col-md-9">
                                            <select ng-model="cliemp.id_evaluador" class="form-control" ng-options="e.id_evaluador as e.nombres+ ' '+e.apellidos for e in listEvaluador">
                                                <option value=""> --- Selleccione --</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" data-target="#screen2" class="collapsed" aria-expanded="false">
                            <span class="glyphicon glyphicon-plus-sign"></span> Listado de cliente empleado
                        </a>
                    </h4>
                </div>
                <div id="screen2" class="panel-collapse collapse in fade" aria-expanded="false">
                    <div class="panel-body">
                        <input type="text" class="form-control" ng-model="search" placeholder="Buscar..." />
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Empresa</th>
                                        <th>Empleado</th>
                                        <th>Evaluador</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="e in listCliEmp | filter:search">
                                        <td>{{e.cliente}}</td>
                                        <td>{{e.empleado}}</td>
                                        <td>{{e.evaluador}}</td>
                                        <td class="text-center">
                                            <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed" ng-click="editcliente(e)" title="Editar a {{e.razon_social}}">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/appjs/cliente_empleado-controller.js"></script>
}

