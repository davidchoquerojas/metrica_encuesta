
@{
    ViewBag.Title = "Cliente";
}
<div class="row margin-top" ng-controller="ClienteCtrl">
    <div class="col-md-12">
        <div class="panel-group" id="accordion">
            <div class="panel">
                <form novalidate class="form-horizontal" name="form">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed">
                                <span class="glyphicon glyphicon-plus-sign"></span> Formulario de registro
                            </a>
                            <button data-toggle="collapse" data-parent="#accordion" data-target="#screen2" class="btn btn-default pull-right" ng-disabled="form.$invalid" ng-click="save(cliente)">
                                <span class="glyphicon glyphicon-floppy-disk"></span>
                                Grabar
                            </button>
                            <button class="btn btn-default pull-right" ng-click="new()">
                                <span class="glyphicon glyphicon-new-window"></span>
                                nuevo
                            </button>
                        </h4>
                    </div>

                    <div id="screen1" class="panel-collapse collapse fade" aria-expanded="false">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Razón social*</label>
                                        <div class="col-sm-10 col-md-9">
                                            <input type="text" class="form-control" ng-model="cliente.razon_social" placeholder="Razón social" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Ruc*</label>
                                        <div class="col-sm-10 col-md-9">
                                            <input type="text" class="form-control" ng-model="cliente.ruc" placeholder="Ruc" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Teléfono</label>
                                        <div class="col-sm-10 col-md-9">
                                            <input type="text" class="form-control" ng-model="cliente.telefono" placeholder="Teléfono" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Latitud</label>
                                        <div class="col-sm-10 col-md-9">
                                            <input type="text" class="form-control" ng-model="cliente.latitud" placeholder="Latitud" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Longitud</label>
                                        <div class="col-sm-10 col-md-9">
                                            <input type="tel" class="form-control" ng-model="cliente.longitud" placeholder="Longitud" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 col-md-3">Estado</label>
                                        <div class="col-sm-10 col-md-9">
                                            <select class="form-control" ng-model="cliente.estado" ng-options="s.code as s.text for s in states">
                                                <option value=""> --- Seleccione --- </option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" data-target="#screen2" class="collapsed" aria-expanded="false">
                            <span class="glyphicon glyphicon-plus-sign"></span> Listado de clientes
                        </a>
                    </h4>
                </div>
                <div id="screen2" class="panel-collapse collapse in fade" aria-expanded="false">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Razón social</th>
                                        <th>Ruc</th>
                                        <th>Teléfono<i class="fa fa-sort"></i></th>
                                        <th>Latitud <i class="fa fa-sort"></i></th>
                                        <th>Logitud<i class="fa fa-sort"></i></th>
                                        <th>Estado  <i class="fa fa-sort"></i></th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="e in listCliente">
                                        <td>{{e.razon_social}}</td>
                                        <td>{{e.ruc}}</td>
                                        <td>{{e.telefono}}</td>
                                        <td>{{e.latitud}}</td>
                                        <td>{{e.longitud    }}</td>
                                        <td ng-if="e.estado == 'A'">Activo</td>
                                        <td ng-if="e.estado != 'A'">Inactivo</td>
                                        <td class="text-center">
                                            <a data-toggle="collapse" data-parent="#accordion" data-target="#screen1" aria-expanded="false" class="collapsed" ng-click="editcliente(e)" title="Editar a {{e.razon_social}}">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/appjs/cliente-controller.js"></script>
}