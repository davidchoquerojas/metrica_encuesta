@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" ng-app="app">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/cssfile/login.min.css" />
</head>
<body ng-controller="LoginCtrl">
    <section class="container">
        <div class="row login_top">
            <div class="hidden-xs col-sm-6 col-md-7">
                <figure class="img-left">
                    <img src="~/Utils/img/empresa.jpg" class="img-responsive" />
                </figure>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-5">
                <center>
                    <figure class="img-right">
                        <img src="~/Utils/img/Logo.jpg" class="img-rounded" />
                    </figure>
                </center>
                <form novalidate class="form-horizontal" name="form">
                    <div class="form-group">
                        <label><span class="glyphicon glyphicon-user"></span> Usuario</label>
                        <input type="text" ng-model="usuario.usuario" class="form-control" placeholder="Usuario" required/>
                    </div>
                    <div class="form-group">
                        <label><span class="glyphicon glyphicon-lock"></span> Contraseña</label>
                        <input type="password" ng-model="usuario.password" class="form-control" placeholder="Contraseña" required/>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-default pull-right" ng-disabled="form.$invalid" ng-click="valid(usuario)"><span class="glyphicon glyphicon-send"></span> Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <div id="alert" class="modal fade" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <img src="~/Utils/img/loading.gif" alt="" height="60" style="margin:auto;display:table-cell;" />
        </div>
    </div>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/appjs/app-factory.js"></script>
    <script src="~/Scripts/appjs/app-service.js"></script>
    <script src="~/Scripts/appjs/login-controller.js"></script>
</body>
</html>


